@model List<heARTshop.Domain.DomainModels.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/cards.css" />
   
</head>
<div class="container">
    <div class="m-3">
        <a class="btn btn-secondary btn-lg btn-block" asp-controller="Products" asp-action="Create">ADD NEW ARTWORK</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row" style="margin-right: -112px;">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 20rem; border:inset; border-color:black;height: 50rem; background-image: linear-gradient(rgba(0,0,0,0.75),rgba(0,0,0,0.75)), url('../back1.jpg');" id="cont">
                    <img id="image" class="card-img-top" src="@item.Image" alt="Image" style="height:83%;" />
                    <div class="middle">
                        <div class="card-body" style="border-radius:25px;" id="text">
                            <h5 style="text-transform: uppercase; line-height: bold; color: white; font-size: 25px;" id="naslov" class="card-title">@item.ProductName</h5>
                            <p class="card-text" style="text-transform: uppercase; color: black; font-size: 18px; line-height: bold;">Author: @item.ProductArtist</p>
                            
                            <p class="card-text" style="text-transform:uppercase; color:black; font-size:18px; line-height:bold;">Rating: @item.Rating</p>
                            <p class="card-text" style="text-transform:uppercase; color:white; font-size:23px; line-height:bold;">@item.ProductPrice $</p>
                        </div>
                    </div>
                        <div class="footer" style="text-align:center;height:100px;">
                            <a asp-controller="Products" asp-action="AddProductToCart" asp-route-id="@item.Id" class="btn btn-secondary">Add To Card</a>
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                            <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Delete</a>

                        </div>
                </div>
                    
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }

    }
</div>