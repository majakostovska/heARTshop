@model heARTshop.Domain.DTO.AddToShoppingCartDTO

@{ ViewData["Title"] = "Add To Shopping Card";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="bg-image" style="background-image: src('../back1.jpg'); height: 100vh; ">
    </br>
    </br>
    </br>
    </br>
    <h1 style="text-transform: uppercase; color: white; text-align: center; font-weight: 100; letter-spacing: 17px; ">Add Selected Product to User Shopping Card</h1>


    <hr />
    </br>
    </br>
    <div class="row">
        <div class="col-md-4 m-auto">
            <form asp-action="AddProductToCart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group" style="color:white; text-align:center;">
                    <label asp-for="SelectedProduct.ProductName"></label>
                    <input disabled asp-for="SelectedProduct.ProductName" class="form-control" />
                </div>

                <div class="form-group" style="color:white; text-align:center;">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" />
                </div>

                <div class="form-group">
                    <input style=" width: 349px;"type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>



